<div class="d-flex">

    {{ form_start(form, { 'attr': {'id': 'form-bk', 'class': 'col-11 col-sm-10 col-md-6 col-lg-4 col-xl-3 m-auto form form-primary'} }) }}

        <div class="form-heading">{{ form_title|default('Formulaire') }}</div>


        <div class="form-body">
            <div class="form-group">
                {{ form_label(form.firstname, 'Prénom', { 'label_attr': {'class': 'label'} }) }}
                {{ form_widget(form.firstname, { 'attr': {'class': 'input', 'placeholder': 'Prénom'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.lastname, 'Nom', { 'label_attr': {'class': 'label'} }) }}
                {{ form_widget(form.lastname, { 'attr': {'class': 'input', 'placeholder': 'Nom'} }) }}
            </div>

        <button class="button button-primary">{{ button_label|default('Save') }}</button>

         {% if edit_form is defined %}
            <button class="button button-danger my-1" form="delete_client">Supprimer</button>
         {% endif %}

    {{ form_end(form) }}

    {% if edit_form is defined %}
    {{ include('client/_delete_form.html.twig') }}
    {% endif %}

</div>
</div></div>
