{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}
<div class="d-flex mvh-100">

    <form class="col-11 col-sm-10 col-md-6 col-lg-4 col-xl-3 m-auto primary-form" method="post">

        <div class="form-heading">
            Se connecter
        </div>

        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="form-body">

            <div class="form-group">
                <label class="primary-label" for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="primary-input" required autofocus>
            </div>

            <div class="form-group">
                <label class="primary-label" for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="primary-input" placeholder="Password" required >
            </div>


            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="primary-button mt-2">
                Connexion
            </button>

            <a class="d-block mt-1" href="{{ path('app_register') }}">Je n'ai pas de compte</a>

        </div>
    </form>
</div>
{% endblock %}
