{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
<div class="container">

    <h1 class="primary-h1">Livres enregistr√©s</h1>

    <a class="add-button" href="{{ path('book_new') }}">Ajouter un livre</a>

    <div class="row">

        {% for book in books %}

        <a class="col-sm-6 col-md-4 col-lg-3 col-xl-2 p-2" href="{{ path('book_show', {'id': book.id}) }}">
                <div class="box">
                <div class="box-img">
                    <img src="{{ asset("uploads/Cover/#{book.image.src}") }}" alt="{{ book.image.text }}">
                </div>
                <div class="box-body">
                    <div class="box-content">{{ book.title }}</div>
                </div>
                </div>
        </a>
        {% else %}
                <div class="alert alert-info">no records found</div>
        {% endfor %}
      
    </div>

</div>

{% endblock %}
